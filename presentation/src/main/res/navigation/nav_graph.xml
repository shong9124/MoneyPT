<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.capstone.presentation.view.signIn.SignInFragment"
        android:label="fragment_sign_in"
        app:route="sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_recommendFinancialItemFragment"
            app:destination="@id/recommendFinancialItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.capstone.presentation.view.signIn.SignUpFragment"
        android:label="fragment_sign_up"
        app:route="sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signUpCompleteFragment"
            app:destination="@id/signUpCompleteFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpCompleteFragment"
        android:name="com.capstone.presentation.view.signIn.SignUpCompleteFragment"
        android:label="fragment_sign_up_complete"
        app:route="sign_up_complete"
        tools:layout="@layout/fragment_sign_up_complete" >
        <action
            android:id="@+id/action_signUpCompleteFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.capstone.presentation.view.signIn.QuestionFragment"
        android:label="fragment_question"
        app:route="question"
        tools:layout="@layout/fragment_question" />
    <fragment
        android:id="@+id/recommendFinancialItemFragment"
        android:name="com.capstone.presentation.view.recommend.RecommendFinancialItemFragment"
        android:label="fragment_recommend_financial_item"
        tools:layout="@layout/fragment_recommend_financial_item" />
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.capstone.presentation.view.myPage.MyPageFragment"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page" />
</navigation>
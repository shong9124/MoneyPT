<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.recommend.itemList.ItemListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tool_bar"
            style="@style/ibm_plex_h1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="추천 받은 상품 / 카드 목록"
            android:background="@drawable/shape_tool_bar"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_back_to_menu"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_left_arrow"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tool_bar"
            app:layout_constraintBottom_toBottomOf="@id/tool_bar"
            app:layout_constraintStart_toStartOf="@id/tool_bar" />

        <TextView
            android:id="@+id/tv_financial_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천 받은 금융 상품들"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tool_bar"
            style="@style/ibm_plex_h1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommend_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_financial_item_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_recommend_item_result" />

        <TextView
            android:id="@+id/tv_financial_card_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천 받은 카드 상품들"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_recommend_result"
            style="@style/ibm_plex_h1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommend_card_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_financial_card_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_recommend_item_result" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.signIn.QuestionResultFragment">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.07"
            android:background="@drawable/ic_logo"
            android:backgroundTint="@color/primary"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="wrap_content"
            android:maxWidth="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="회원님의 금융 성향은 다음과 같습니다."
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_propensity"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/ibm_plex_h1" />

        <TextView
            android:id="@+id/tv_user_propensity"
            android:layout_width="wrap_content"
            android:maxWidth="360dp"
            android:layout_height="wrap_content"
            tools:text="균형형"
            android:textColor="@color/primary"
            android:textSize="32sp"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tv_guide"
            app:layout_constraintBottom_toTopOf="@id/tv_propensity_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ibm_plex_h1" />

        <TextView
            android:id="@+id/tv_propensity_description"
            android:layout_width="wrap_content"
            android:maxWidth="360dp"
            android:layout_height="wrap_content"
            tools:text="균형형"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tv_user_propensity"
            app:layout_constraintBottom_toTopOf="@id/tv_pros_and_cons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ibm_plex_h1" />

        <TextView
            android:id="@+id/tv_pros_and_cons"
            android:layout_width="wrap_content"
            android:maxWidth="360dp"
            android:layout_height="wrap_content"
            tools:text="장단점"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tv_propensity_description"
            app:layout_constraintBottom_toTopOf="@id/tv_precaution"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ibm_plex_h1" />

        <TextView
            android:id="@+id/tv_precaution"
            android:layout_width="wrap_content"
            android:maxWidth="360dp"
            android:layout_height="wrap_content"
            tools:text="예방법"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tv_pros_and_cons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ibm_plex_h1" />

        <Button
            android:id="@+id/btn_to_check_complete"
            android:layout_width="wrap_content"
            android:maxWidth="360dp"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="@color/white"
            android:background="@drawable/btn_login"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_precaution"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

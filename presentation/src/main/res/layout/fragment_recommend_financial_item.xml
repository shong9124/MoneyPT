<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.recommend.RecommendFinancialItemFragment">

    <ImageView
        android:id="@+id/iv_ic_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/ic_logo"
        android:backgroundTint="@color/primary"
        android:alpha="0.2"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shape_tool_bar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            style="@style/ibm_plex_h1"
            tools:text="금융 상품 추천" />

    </Toolbar>

    <Button
        android:id="@+id/btn_item_recommend"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_recommend"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_item_recommend"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_item_recommend"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@null"
        android:translationZ="5dp"
        app:layout_constraintTop_toTopOf="@id/btn_item_recommend"
        app:layout_constraintStart_toStartOf="@id/btn_item_recommend" />

    <TextView
        android:id="@+id/tv_item_recommend"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:translationZ="5dp"
        android:text="나에게 알맞는 금융 상품 추천 받기"
        android:textSize="12sp"
        android:textColor="@color/primary"
        style="@style/ibm_plex_h1"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/btn_item_recommend"
        app:layout_constraintBottom_toBottomOf="@id/btn_item_recommend" />

    <Button
        android:id="@+id/btn_card_recommend"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_recommend"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/btn_item_recommend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_card_recommend"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_card_recommend"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@null"
        android:translationZ="5dp"
        app:layout_constraintTop_toTopOf="@id/btn_card_recommend"
        app:layout_constraintStart_toStartOf="@id/btn_card_recommend" />

    <TextView
        android:id="@+id/tv_card_recommend"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:translationZ="5dp"
        android:text="나에게 알맞는 카드 추천 받기"
        android:textSize="12sp"
        android:textColor="@color/primary"
        style="@style/ibm_plex_h1"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/btn_card_recommend"
        app:layout_constraintBottom_toBottomOf="@id/btn_card_recommend" />

    <Button
        android:id="@+id/btn_recommended_list"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_recommend"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/btn_card_recommend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_recommended_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_recommended_list"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@null"
        android:translationZ="5dp"
        app:layout_constraintTop_toTopOf="@id/btn_recommended_list"
        app:layout_constraintStart_toStartOf="@id/btn_recommended_list" />

    <TextView
        android:id="@+id/tv_recommended_list"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:translationZ="5dp"
        android:text="추천 받은 상품 / 카드 확인하기"
        android:textSize="12sp"
        android:textColor="@color/primary"
        style="@style/ibm_plex_h1"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/btn_recommended_list"
        app:layout_constraintBottom_toBottomOf="@id/btn_recommended_list" />

    <include
        android:id="@+id/bottom_nav"
        layout="@layout/view_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
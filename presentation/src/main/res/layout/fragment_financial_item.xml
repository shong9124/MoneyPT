<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.signIn.SignUpFragment">

    <TextView
        android:id="@+id/tool_bar"
        style="@style/ibm_plex_h1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="금융 상품 추천"
        android:background="@drawable/shape_tool_bar"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_to_menu"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_left_arrow"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="@id/tool_bar" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_logo"
        android:backgroundTint="@color/primary"
        android:alpha="0.07"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_enter_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회하시려는 상품의 기간을 입력해주세요."
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_enter_term"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1" />

    <EditText
        android:id="@+id/et_enter_term"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/gray_c9"
        android:textColor="@color/primary"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        style="@style/ibm_plex_h1"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_term"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_enter_amount"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개월"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/et_enter_term"
        app:layout_constraintBottom_toBottomOf="@id/et_enter_term"
        app:layout_constraintEnd_toEndOf="@id/tv_enter_term"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 자산을 입력해주세요."
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_term"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_enter_amount"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1"/>

    <EditText
        android:id="@+id/et_enter_amount"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/primary"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        style="@style/ibm_plex_h1"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_select_propensity"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만원"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/et_enter_amount"
        app:layout_constraintBottom_toBottomOf="@id/et_enter_amount"
        app:layout_constraintEnd_toEndOf="@id/et_enter_amount"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_select_propensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금융 성향을 선택해주세요."
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinner_select_propensity"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1"/>

    <Spinner
        android:id="@+id/spinner_select_propensity"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_edit_text"
        android:spinnerMode="dropdown"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_select_propensity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_to_get_bank_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
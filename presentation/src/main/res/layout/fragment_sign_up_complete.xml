<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.signIn.SignUpCompleteFragment">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_logo"
        android:backgroundTint="@color/primary"
        android:alpha="0.07"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 입력해주세요"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_enter_name"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1" />

    <EditText
        android:id="@+id/et_enter_name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="ex) 홍길동"
        android:textColorHint="@color/gray_c9"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_enter_month_income"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_enter_month_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월 수입을 입력해주세요"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_enter_month_income"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1"/>

    <EditText
        android:id="@+id/et_enter_month_income"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/primary"
        style="@style/ibm_plex_h1"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_month_income"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_enter_asset"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_month_income_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만원"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        style="@style/ibm_plex_h1"
        app:layout_constraintTop_toTopOf="@+id/et_enter_month_income"
        app:layout_constraintBottom_toBottomOf="@id/et_enter_month_income"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_month_income" />

    <TextView
        android:id="@+id/tv_enter_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 자산 규모를 입력해주세요"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_month_income"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_enter_asset"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1"/>

    <EditText
        android:id="@+id/et_enter_asset"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/primary"
        style="@style/ibm_plex_h1"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_asset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_enter_birth"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_asset_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만원"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        style="@style/ibm_plex_h1"
        app:layout_constraintTop_toTopOf="@+id/et_enter_asset"
        app:layout_constraintBottom_toBottomOf="@id/et_enter_asset"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_asset" />

    <TextView
        android:id="@+id/tv_enter_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일과 성별을 입력해주세요"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_asset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_enter_birth"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1"/>

    <EditText
        android:id="@+id/et_enter_birth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="20010101"
        android:inputType="number"
        android:textColorHint="@color/gray_c9"
        style="@style/ibm_plex_h1"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_birth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cb_male"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>
    
    <CheckBox
        android:id="@+id/cb_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_birth"
        app:layout_constraintStart_toEndOf="@+id/et_enter_birth"
        app:layout_constraintEnd_toStartOf="@+id/cb_female"/>

    <CheckBox
        android:id="@+id/cb_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_birth"
        app:layout_constraintStart_toEndOf="@+id/cb_male"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_to_sign_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
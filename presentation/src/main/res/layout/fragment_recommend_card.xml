<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.recommend.card.RecommendCardFragment">

    <TextView
        android:id="@+id/tool_bar"
        style="@style/ibm_plex_h1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="맞춤형 카드 추천 받기"
        android:background="@drawable/shape_tool_bar"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_to_menu"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_left_arrow"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="@id/tool_bar" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_logo"
        android:backgroundTint="@color/primary"
        android:alpha="0.07"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="엑셀 파일을 업로드 해주세요."
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_to_upload"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1" />

    <Button
        android:id="@+id/btn_to_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="엑셀파일 업로드하기"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/btn_login"
        android:layout_marginTop="30dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
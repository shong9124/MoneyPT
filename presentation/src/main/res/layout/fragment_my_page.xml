<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.myPage.MyPageFragment">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_user"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다."
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(회원 이름) 님!"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_current_asset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 자산"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_current_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1,000 만원"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1.0"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_month_income_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월 소득"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_asset_text"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_month_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="300 만원"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_asset_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1.0"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_financial_mbti_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금융 MBTI"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_month_income_text"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ibm_plex_h1" />

    <TextView
        android:id="@+id/tv_financial_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="안정형"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_month_income_text"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ibm_plex_h1" />
    
    <ImageView
        android:id="@+id/iv_dots"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@drawable/ic_dots"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_financial_mbti_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/bottom_nav"
        layout="@layout/view_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
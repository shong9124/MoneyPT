<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.signIn.SignUpFragment">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_logo"
        android:backgroundTint="@color/primary"
        android:alpha="0.07"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_enter_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일을 입력해주세요"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_enter_email"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1" />

    <EditText
        android:id="@+id/et_enter_email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="example1234@gmail.com"
        android:textColorHint="@color/gray_c9"
        android:textColor="@color/primary"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_enter_pw"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_enter_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 설정해주세요"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_enter_pw"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ibm_plex_h1"/>

    <EditText
        android:id="@+id/et_enter_pw"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="8글자 이상의 영문자와 숫자 혼합"
        android:inputType="textPassword"
        android:textColor="@color/primary"
        android:textColorHint="@color/gray_c9"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btn_to_sign_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>